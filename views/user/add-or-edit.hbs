<h3>{{viewTitle}}</h3>

<form action='/user' method='POST' autocomplete='off'>
  <input type='hidden' name='_id' value='{{employee._id}}' />
  <div class='form-group'>
    <label>Full Name</label>
    <input
      type='text'
      class='form-control'
      name='fullName'
      placeholder='Full Name'
      value='{{user.fullName}}'
    />
    <div class='text-danger'>
      {{employee.fullNameError}}</div>
  </div>
  <div class='form-group'>
    <label>Email</label>
    <input
      type='text'
      class='form-control'
      name='email'
      placeholder='Email'
      value='{{user.email}}'
    />
    <div class='form-group'>
      <label>Mobile</label>
      <input
        type='text'
        class='form-control'
        name='mobile'
        placeholder='Mobile'
        value='{{user.mobile}}'
      />
    <div class='form-row'>
      <label>City</label>
      <input
        type='text'
        class='form-control'
        name='city'
        placeholder='City'
        value='{{user.city}}'
      />
    </div>
  </div>
  <div class='form-group'>
    <button type='submit' class='btn btn-info'>
      Submit</button>
    <a class='btn btn-secondary' href='/user/list'>
      View All</a>
  </div>
</form>